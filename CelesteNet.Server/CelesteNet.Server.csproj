<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net452;netcoreapp3.1</TargetFrameworks>
    <AssemblyName>CelesteNet.Server</AssemblyName>
    <RootNamespace>Celeste.Mod.CelesteNet.Server</RootNamespace>
    <OutputType>Exe</OutputType>
    <CopyCeleste>true</CopyCeleste>
  </PropertyGroup>

  <Import Project="..\CelesteNet.props" />

  <ItemGroup>
    <ProjectReference Include="..\CelesteNet.Shared\CelesteNet.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Mono.Options" Version="6.6.0.161" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <!-- PackageReference Include="WebSocketSharp" Version="1.0.3-rc11" /-->
    <Reference Include="WebSocketSharp.CustomHeaders.CustomHttpServer" HintPath="..\lib\$(TargetFramework)\WebSocketSharp.CustomHeaders.CustomHttpServer.dll" Private="true" />
  </ItemGroup>

  <Choose>
    <When Condition="$(TargetFramework.StartsWith('netstandard')) Or $(TargetFramework.StartsWith('netcoreapp'))">
      <PropertyGroup>
        <DefineConstants>NETCORE;$(DefineConstants)</DefineConstants>
      </PropertyGroup>
      <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
      </ItemGroup>
    </When>

    <Otherwise>
      <PropertyGroup>
        <DefineConstants>NETFRAMEWORK;$(DefineConstants)</DefineConstants>
      </PropertyGroup>
      <ItemGroup>
        <Reference Include="System.Web" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
  </ItemGroup>

</Project>
